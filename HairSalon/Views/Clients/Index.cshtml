@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>; //new


<h2>Clients</h2>

@if (@Model.Count == 0)
{
  <h4>No clients have been added yet!</h4>
}

@if (@Model.Count != 0)
{
  <div class="divClass">
    <p><span class="left olive2">Client Name</span> <span class="right olive2">Stylist Name</span></p>
     <br>
    @foreach (Client client in Model)
    {
      <span class="left">@Html.ActionLink($"{client.Description}", "Details", new { id = client.ClientId })</span> <span class="right">@client.Stylist.Name </span>
      <br>
    }
  </div>
}

<br> <br> <br>

<p>@Html.ActionLink("Add new client", "Create")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>